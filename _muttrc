#
# A simple mutt config for a gmail
# inspired from, www.archvortex.pt/2011/07/simple-mutt-configuration-for-gmail.html (14/01/2013)
#

# Set up mail box 

set mbox_type=maildir
set mbox="~/Dropbox/Mail/Inbox/"
set spoolfile="~/Dropbox/Mail/Inbox"
set folder="~/Dropbox/Mail/"
set record="~/Dropbox/Mail/Sent"
set postponed="~/Dropbox/Mail/Postponed"

# Gmail account info
set from= "mailtomuhammet@gmail.com"
set realname= "Muhammet Orazov"
set imap_user= "mailtomuhammet@gmail.com"
set imap_pass= "youwish"

# Editor
set editor= "nano" #vim -c "set textwidth=72" -c "set wrap" -c "set nocp" -c "?^$"

# Folders

# Remote Folders

set folder= "imaps://imap.gmail.com:993"
set spoolfile= "+INBOX"
set postponed= "+[Gmail]/Drafts"

# Local folders
set header_cache= ~/.mutt/cache/headers
set message_cachedir= ~/.mutt/cache/bodies
set certificate_file= ~/.mutt/certificates

# SMTP setup
set smtp_url= "smtp://mailtomuhammet@smtp.gmail.com:587/"
set smtp_pass= "youwish"

# Mutt session security
set move = no  #Stop asking to "move read messages to mbox"!
set imap_keepalive = 900
