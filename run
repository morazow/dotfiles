#!/usr/bin/env bash

## set -o errexit
## Exits the current script if any of statements return non-true value.
set -e

## set -o nounset
## Exits the script if an uninitialized variable is used.
set -u

## If any of the commands fail with a non-zero exit code, then abort the entire
## pipeline with that exit code.
set -o pipefail

HOST_OS=$(uname)
if test "$HOST_OS" = "Darwin"; then
    echo "Running on MacOS!"
elif test "$HOST_OS" = "Linux"; then
    echo "Running on Linux!"
else
    echo "Unknown host OS: $HOST_OS"
    exit 1
fi

CWD="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

remove_not_needed () {
    rm -f ~/.profile
    rm -f ~/.bash_logout
}

create_symlinks () {
    for dot in $(ls "${CWD}/configs")
    do
        echo "Linking ${dot} file."
        rm -f ~/.${dot}
        ln -sf "${CWD}/configs/${dot}" ~/.${dot}
    done
}

setup_vim () {
    mkdir -p ~/.vim/{tmp,undo,backup,bundle,autoload}/
    cd ~/.vim
    wget "https://raw.githubusercontent.com/tpope/vim-pathogen/master/autoload/pathogen.vim" -O "autoload/pathogen.vim"
    ./updatePlugins.sh
}

remove_not_needed
create_symlinks
setup_vim
